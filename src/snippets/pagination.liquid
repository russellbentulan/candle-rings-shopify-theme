<nav role="navigation" class="pagination__container">
  <ol class="pagination">
    {%- if paginate.previous.is_link -%}
      <li>
        <a href="{{ paginate.previous.url }}" class="pagination__text">
          <i class="fas fa-chevron-left"></i>
        </a>
      </li>
    {%- endif -%}

    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <li>
          <a href="{{ part.url }}" class="pagination__text">
            <span class="visuallyhidden">page</span>
            {{ part.title }}
          </a>
        </li>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <li class="active" aria-current="page">
            <span class="pagination__text">
              <span class="visuallyhidden">page</span>
              {{ part.title }}
            </span>
          </li>
        {%- else -%}
          <li>
            <span class="pagination__text">
              <span class="visuallyhidden">page</span>
              {{ part.title }}
            </span>
          </li>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if paginate.next.is_link -%}
      <li>
        <a href="{{ paginate.next.url }}" class="pagination__text">
          <i class="fas fa-chevron-right"></i>
        </a>
      </li>
    {%- endif -%}
  </ol>
</nav>